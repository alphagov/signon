

/* tab overrides */
.ui-widget-content,
.ui-tabs .ui-tabs-nav {
  background-color: inherit;
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  padding-left:8px;
}

.ui-tabs .ui-tabs-nav li.ui-state-default {
  /* unselected tabs*/
  background-color:#E1E8E8;
}

.ui-tabs .ui-tabs-nav li.ui-tabs-selected {
  background-color: inherit;
}

.ui-tabs .ui-tabs-nav li.ui-state-active {
  border-bottom: 1px solid #fff !important;
}

.ui-corner-top, .ui-corner-left, .ui-corner-tl {
    border-top-left-radius: 0px;
    border:none;
}
.ui-corner-top, .ui-corner-right, .ui-corner-tr {
    border-top-right-radius: 0px;
    border:none;
}
.ui-corner-bottom, .ui-corner-left, .ui-corner-bl {
    border-bottom-left-radius: 0px;
    border:none;
}
.ui-corner-bottom, .ui-corner-right, .ui-corner-br {
    border-bottom-right-radius: 0px;
    border:none;
}
.answer .ui-tabs .ui-tabs-nav li {
    border-bottom: 0 none;
    float: left;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    position: relative;
    top: 1px;
    
    white-space: nowrap;
}
.ui-tabs {
    font-size: inherit;
}
.ui-tabs .ui-tabs-nav li.ui-state-default {
  background-color:#E1E8E8; 
  border: medium none;
  border-right:1px solid #C9D0D0;
  
    color: #000;
}
.ui-tabs .ui-tabs-nav li.ui-state-default a {
    color: #000;
}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected {
    background: none repeat scroll 0 0 #fff;
    border: 1px solid #AAAAAA;
}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected a {
    color: #444444;
}
.ui-tabs .ui-tabs-nav  li.ui-state-hover{
  background-color: #97C5E5;
  color:#fff;
}
.ui-tabs .ui-tabs-nav  li.ui-state-hover a{
  color:#fff;
}
.ui-tabs .ui-tabs-panel{
  border:none;
}
.ui-widget-header{
  padding-left:4px;
}
.highlighted-event{
  background-color:#D33883;
  color:#fff;
  text-align:center;
  padding:0.1em 2em;
  
}
.highlighted-event p{
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  font-size:4.8em;
  font-weight:bold;
}
.epic-bunting{
  width:100%;
  position:absolute;
  left:0;
  top:525px;
  overflow:visible;
}
.epic-bunting span{
    background-image: url(<%= asset_path "bunting.png" %>);
    background-color:transparent;
    background-repeat:repeat-x;
    width:99.9%;
    position:absolute;
    height:60px;
    -webkit-transform: rotate(-3deg); 
    -moz-transform: rotate(-3deg); 
    -webkit-backface-visibility:hidden;
  
}
.bank-holiday .ui-tabs,
.bank-holiday .inner{
  position:static;
}
.bank-holiday article{
  position:static;
}
