html {
  font-size: 62.5%; /* reset to 10px default so 2.4rem == 24px */
}

body {
  font-size: 16px;
  font-size: 1.6rem;
  padding-top: 60px;
  padding-bottom: 40px;
}

.navbar a.brand {
  background-image: url(<%= asset_path 'header-crown.png' %>);
  background-position: 0 0.25em;
  background-repeat: no-repeat;
  color: #fff;
  font-family: "GillSans", "Gill Sans", "Helvetica Neue", Helvetica, sans-serif;
  margin-left: 0;
  padding-left: 2em;
}

h1 + .well {
  margin-top: 1.8rem;
}

.chzn-select {
  width: 300px
}

/* Hide only visually, but have it available for screenreaders */
.visuallyhidden { position:absolute; left:-9999em; }

.suspenders {
  margin: 1em 0
}

form .offset {
  margin-left: 5px;
}

.inline_block {
  display: inline;  
}

tr.error > td {
  background-color: #f2dede;
}