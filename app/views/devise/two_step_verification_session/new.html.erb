<% content_for :title, "2-step verification" %>
<% content_for :thin_form, true %>
<% content_for :suppress_navbar_items, true %>

<div class="page-title">
  <h1>Sign in</h1>
</div>

<%= form_tag(two_step_verification_session_path, :method => :post) do %>
  <div class="panel panel-default" data-module="track-click">
    <div class="panel-heading">
      <h3 class="panel-title">2-step verification</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= label_tag :code, 'Verification code' %>
        <p class="text-muted" id="code-hint">Use the verification app on your phone to get your code.<br />You won’t need to do this again for 30 days.</p>
        <%= text_field_tag :code, nil,
          class: 'form-control input-md-4 input-lg',
          placeholder: 'Enter 6-digit code',
          tabindex: 1,
          autofocus: 'autofocus',
          autocomplete: 'off',
          'aria-describedby': 'code-hint' %>
      </div>
      <div data-module="toggle">
        <%= link_to "Can’t get your verification code?", "#", class: "js-toggle js-toggle-target if-no-js-hide js-track" %>
        <div class="js-toggle-target if-js-hide">
          <h4><%= t('.contact_header') %></h4>
          <%= t('.contact_details',
            department_link: link_to(t('department_name'), t('department_url')),
            support_ticket_link: link_to('support ticket', "#{t('department_url')}support/internal/")).each do |_, paragraph| %>
            <p><%= paragraph %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= submit_tag "Sign in", tabindex: 2, class: 'btn btn-success btn-lg btn-block js-track' %>
    </div>
  </div>
<% end %>
