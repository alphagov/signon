<h1>Sign in</h1>

<% if Date.today >= Date.new(2014,03,11) && Date.today < Date.new(2014,03,24) %>
  <br/>
  <div class="alert alert-block">
    <h2>
      <p>There will be downtime on 25 March 2014 from 18:00 until 23:00 due to a platform change. Please avoid publishing content at that time.</p>
    </h2>
  </div>
<% elsif Date.today >= Date.new(2014,03,24) && Date.today < Date.new(2014,03,26) %>
  <br/>
  <div class="alert alert-danger">
    <h2>
      <p>There will be downtime on 25 March 2014 from 18:00 until 23:00 due to a platform change. Please avoid publishing content at that time.</p>
    </h2>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'well', autocomplete: 'on' }) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'span6', autofocus: 'autofocus' %>

  <%= f.label :password, "Passphrase" %>
  <%= f.password_field :password, class: 'span6' %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox" for="remember_me">Remember me?
      <%= f.check_box :remember_me, class: 'checkbox' %>
    </label>
  <% end -%>

  <hr>

  <%= f.submit "Sign in", class: 'btn btn-primary' %>
<% end %>

<%= render "links" %>
