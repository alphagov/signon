<% content_for :title, "Sign in" %>

<div class="thin-form">
  <div class="page-title">
    <h1>Sign in</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'panel panel-default', autocomplete: 'on' }) do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control input-lg', autofocus: 'autofocus' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Passphrase" %>
        <%= f.password_field :password, class: 'form-control input-lg' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="checkbox" for="remember_me">Remember me?
          <%= f.check_box :remember_me, class: 'checkbox' %>
        </label>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= f.submit "Sign in", class: 'btn btn-success btn-lg btn-block' %>
    </div>
  <% end %>
</div>

<%= render "links" %>
