<% if @batch_invitation.in_progress? %>
  <% content_for(:content_for_head) do %>
    <meta http-equiv="refresh" content="3">
  <% end %>
<% end %>

<h1>Creating a batch of users</h1>

<div class="well">
  <% if @batch_invitation.in_progress? %>
    <div class="alert alert-info">
      In progress.
      <%= @status_message %>
    </div>
  <% elsif @batch_invitation.outcome == "success" %>
    <div class="alert alert-success">
      Success!
      <%= @status_message %>
    </div>
  <% elsif @batch_invitation.outcome == "failure" %>
    <div class="alert alert-error">
      Failure!
      <%= @status_message %>
    </div>
  <% end %>

  <table class="batch-invitation-users table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Outcome</th>
      </tr>
    </thead>
    <tbody>
      <% @batch_invitation.batch_invitation_users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.outcome %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="well">
  <%= link_to "All users", admin_users_path, class: "btn btn-primary" %>
</div>
