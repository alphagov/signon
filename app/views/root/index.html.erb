<h1>Welcome to GOV.UK</h1>

<div class="well">
  <h2>Your account</h2>
  <ul>
    <li><%= link_to "Change your passphrase", edit_user_path %></li>
    <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
  </ul>

<% if current_user.is_admin? %>
  <h2>Admin tasks</h2>
  <ul>
    <li><%= link_to "Administer users", admin_users_path %></li>
  </ul>
<% end %>


<h3>Permissions</h3>
<ul>
  <% current_user.permissions.each do |permission| %> 
    <li>
      <%= permission.application.name %> : <%= permission.permissions.nil? ? "None" : permission.permissions.map(&:humanize).join(",") %>
    </li>
  <% end %>
</ul>

<%- unless current_user.authorisations.empty? %>
  <h2>Authorised applications</h2>
  <ul>
  <%- current_user.authorisations.each do |authorisation| -%>
    <li><%= authorisation.application.name %></li>
  <%- end -%>
  </ul>
<%- end -%>
</div>
